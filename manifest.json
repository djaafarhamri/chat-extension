{
    "manifest_version": 3,
    "name": "Chat Toggle Extension",
    "version": "1.0",
    "description": "Toggle chat popup on any page from the extension popup.",
    "permissions": ["scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  